<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?attr/spaceXSmall"
    android:layout_marginBottom="?attr/spaceXSmall">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="?attr/spaceXSmall"
        android:layout_marginRight="?attr/spaceXSmall"
        android:textColor="@color/colorOnSurface" />

    <com.khosravi.devin.present.uikit.CircularTextView
        android:id="@+id/ctv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?attr/spaceXSmall"
        android:layout_marginRight="?attr/spaceXSmall"
        android:layout_toEndOf="@+id/tv_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="?attr/spaceXSmall"
        android:layout_marginRight="?attr/spaceXSmall"
        android:layout_toEndOf="@+id/ctv_count"
        android:textColor="@color/colorOnSurface" />
</RelativeLayout>