<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="false">

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/cpi_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="?attr/spaceLarge"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <SearchView
        android:id="@+id/sv_text"
        android:queryHint="Search in body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/cvg_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="start"
        app:layout_constraintTop_toBottomOf="@id/sv_text"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_search_found"
            style="@style/AppTheme.TextAppearance.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/spaceLarge"
            android:layout_marginEnd="?attr/spaceLarge"
            android:layout_weight="1"
            android:paddingVertical="12dp"
            android:textColor="@color/white_light_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/iv_search_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3/10" />

        <ImageButton
            android:id="@+id/iv_search_down"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="?attr/spaceSmall2"
            android:rotation="180"
            android:src="@drawable/ic_ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_found"
            app:layout_constraintEnd_toStartOf="@id/iv_search_up"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/tv_search_found"
            app:layout_constraintTop_toTopOf="@id/tv_search_found" />

        <ImageButton
            android:id="@+id/iv_search_up"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="?attr/spaceSmall2"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="?attr/spaceSmall2"
            android:src="@drawable/ic_ic_arrow_down"
            app:layout_constraintBottom_toBottomOf="@id/tv_search_found"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_search_found" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingVertical="?attr/spaceLarge"
        android:scrollbars="vertical"
        android:visibility="invisible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvg_search_result"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
